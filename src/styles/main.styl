body
    font-family "Open Sans"
    background-color #EEE
    color #555

    header
        background-color #e0e0e0
        border-bottom solid 1px #cecece
        padding 30px 0


        .container

            .header-content
                display flex
                flex-direction column
                align-items center
                justify-content space-between

                @media screen and (min-width: 768px)
                    flex-direction row

                .header-logo
                    display flex

                    .logo-container
                        width 70px

                        .logo-museeks
                            display block
                            width 60px

                    .titles-container
                        width calc(100% - 70px)

                .header-links

                    a
                        display inline-block
                        vertical-align middle
                        margin-left 15px

    .main-content
        margin-top: 50px;

    .heart
        color #C70000

    .screenshot
        display block
        max-width 100%

    .btn-primary
        border 0
        background-color #499cd5
        transition all .2s ease-in-out
        box-shadow none

        &:hover,
        &:active,
        &:focus
            box-shadow none
            background-color #499cd5

        &:focus:active
            box-shadow none
            background-color #4383AF

    hr
        margin-top 8px
        margin-bottom 8px
        border-top 1px solid #DADADA

    .no-margin-top
        margin-top 0

    .no-margin-bottom
        margin-bottom 0

    #contributors
        margin-bottom 30px

        .contributors-list
            display flex
            justify-content flex-start

            a.contributor
                width 40px
                margin-right 10px

                img
                    display block
                    width 100%;
                    height auto
                    border-radius 50px

    footer
        margin-top 30px
        text-align center

    .thin
        font-weight 100

    .v-align-middle
        vertical-align middle

    a,
    a:hover,
    a:active,
    a:focus
        text-decoration none
